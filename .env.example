# =============================================================================
# KINE WEB APP - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Public URL, used for OG Image when running nuxt generate
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Application environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kine

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Better Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-auth-key-change-this-in-production
BETTER_AUTH_URL=http://localhost:3000

# Session Configuration
SESSION_EXPIRY_HOURS=8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# AUDIT & LOGGING
# =============================================================================

# Audit log retention (in days)
AUDIT_LOG_RETENTION_DAYS=2555

# Log levels: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# ðŸ“§ EMAIL CONFIGURATION
# =============================================================================
# Configure SMTP for transactional emails (password resets, notifications, etc.)
# In local/dev, Mailpit captures emails for testing (no real delivery)
# In staging/prod, use your real SMTP provider (e.g. SendGrid, Mailgun, AWS SES)

# --- Common ---
SMTP_FROM="noreply@kine-app.com"
SMTP_SECURE=false          # true = use TLS (465), false = STARTTLS (587)

# --- Development (Mailpit) ---
# Automatically used if MAIL_ENV=development
MAIL_ENV=development
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# =============================================================================
# HEALTHCARE COMPLIANCE
# =============================================================================

# HIPAA Compliance Settings
HIPAA_COMPLIANT=true
SECURE_COOKIES=true
COOKIE_SAME_SITE=strict

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Application monitoring
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Enable SQL query logging (development only)
LOG_SQL_QUERIES=false
